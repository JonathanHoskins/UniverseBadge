# Flake8 configuration aligned with Ruff and MicroPython patterns
[flake8]
# Exclude embedded/hardware examples and binary assets
exclude =
    ir-beacon,
    eink,
    **/assets/**,
    images
# Keep flake8 focused on syntax/undefined-name issues; Ruff handles style.
select = E9,F63,F7,F82
# Additionally ignore project-specific false positives
extend-ignore = E402,E701,F403,F405
# Keep line length reasonable for small-display UI code
max-line-length = 120
